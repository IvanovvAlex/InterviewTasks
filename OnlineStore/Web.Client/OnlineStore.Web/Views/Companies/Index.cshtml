@model IEnumerable<OnlineStore.Common.Responses.CompanyResponses.GetAllCompaniesResponse>

@{
}
<div class="container text-center">
    <a class="btn btn-primary center mt-4 mb-4 w-25" asp-controller="Companies" asp-action="Create">Create new company</a>

    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-2">Name</th>
                <th scope="col" class="col-lg-3">ID Code</th>
                <th scope="col" class="col-lg-3">Owner</th>
                <th scope="col" class="col-lg-3">Country</th>
                <th scope="col" class="col-lg-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr class="row">
                    <td class="col-lg-2">@company.Name</td>
                    <td class="col-lg-3">@company.UniqueIdentificationCode</td>
                    <td class="col-lg-3">@company.OwnerFullName</td>
                    <td class="col-lg-3">@company.Country</td>
                    <td class="col-lg-1">
                        <a class="btn btn-primary" asp-controller="Companies" asp-action="Details" asp-route-id="@company.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>