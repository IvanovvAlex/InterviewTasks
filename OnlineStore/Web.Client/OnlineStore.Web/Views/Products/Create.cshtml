@model OnlineStore.Common.Requests.ProductRequests.CreateProductRequest

<h1 class="text-center">Create Product</h1>
<form class="mx-auto half-width col-5 " asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="top-border-line primary-separator"></div>
    <div class="form-group">
        <label asp-for="@Model.Type">Type</label>
        <select asp-for="@Model.Type" class="form-control" asp-items="ViewBag.Types"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Name...">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <input asp-for="@Model.Description" type="text" class="form-control" placeholder="Descriprion...">
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <input asp-for="@Model.Price" type="number" step="0.5" class="form-control" placeholder="Price...">
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Quantity">Quantity</label>
        <input asp-for="@Model.Quantity" type="number" step="1" class="form-control" placeholder="Quantity...">
        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
    </div>
    <div class="top-border-line primary-separator"></div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>