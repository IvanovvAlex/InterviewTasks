@model IEnumerable<OnlineStore.Common.Responses.ProductResponses.GetAllProductsResponse>

@{
}
<div class="container text-center">
    <a class="btn btn-primary center mt-4 mb-4 w-25" asp-controller="Products" asp-action="Create">Create new product</a>

    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-lg-8">Name</th>
                <th scope="col" class="col-lg-3">Price</th>
                <th scope="col" class="col-lg-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="row">
                    <td class="col-lg-8">@product.Name</td>
                    <td class="col-lg-3">@product.Price</td>
                    <td class="col-lg-1">
                        <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    </td>
                </tr>
            } 
        </tbody>
    </table>
</div>