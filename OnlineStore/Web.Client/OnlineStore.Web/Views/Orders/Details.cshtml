@model OnlineStore.Common.Responses.OrderResponses.OrderResponse
@{
    ViewData["Title"] = "Details";
}
@if (TempData["AddedSuccessfully"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="alert">
        <i class="fa fa-check"></i>
        The product is added successfully to your cart.
    </div>
}

<main class="mt-3">
    <link rel="stylesheet" href="/text.css" type="text/css" />
    <div class="container justify-content-center">
        <h3 class="text-center">@Model.CreationDate</h3>

        <table class="table table-striped table-hover text-center">
            <tbody>
                <tr class="row">
                    <th scope="row" class="col-lg-2 text-left">Company</th>
                    <td class="col-lg-10">
                        <a asp-controller="Companies" asp-action="Details" asp-route-id="@Model.CompanyId">@Model.Company.Name</a>
                    </td>
                </tr>
                <tr class="row">
                    <th scope="row" class="col-lg-2 text-left">Product</th>
                    <td class="col-lg-10">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ProductId">@Model.Product.Name</a>
                    </td>
                </tr>
                <tr class="row">
                    <th scope="row" class="col-lg-2 text-left">Quantity</th>
                    <td class="col-lg-10">@Model.Quantity</td>
                </tr>
                <tr class="row">
                    <th scope="row" class="col-lg-2 text-left">Total Price</th>
                    <td class="col-lg-10">@Model.TotalPrice $</td>
                </tr>
            </tbody>
        </table>
        <container class="d-flex justify-content-center mb-5 mt-5">
            <div class="button-holder text-center m-auto">
                <a asp-controller="Orders" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-outline-warning">Update</a>
            </div>
            <div class="button-holder text-center m-auto">
                <a asp-controller="Orders" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
            </div>
            <div class="button-holder text-center m-auto">
                <a asp-controller="Orders" asp-action="index" class="btn btn-outline-primary">Back</a>
            </div>
        </container>
    </div>
</main>

<script>
    setTimeout(function () {
        $('#alert').delay(1000).fadeOut(300);
    }, 1000);
</script>